            <webModule>
            <groupId>es.uc3m.tiw.web</groupId>
            <artifactId>banco-web</artifactId>
           <contextRoot>${webContext}</contextRoot>          
            </webModule>
          </modules>
        </configuration>
      </plugin>
    </plugins>
  </build>

